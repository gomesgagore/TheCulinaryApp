<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.carlos.theculinaryapp.ItemActivity"
    android:background="@drawable/kitchback"
    android:backgroundTint="@color/back_Whiteness"
    android:backgroundTintMode="src_over">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/food5"
        android:contentDescription="@string/recipe_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/name_text"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/image_item"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_this_recipe"
        android:id="@+id/add_button"
        android:layout_alignBottom="@+id/image_item"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_item" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/image_item"
        android:layout_alignParentStart="false"
        android:layout_marginTop="10dp"
        android:textIsSelectable="true" />
</RelativeLayout>
